<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
   <title>Homepage</title>
</head>

<body>
   <%- include('./partials/nav') %>

   <div class="container mt-3 gap-4 d-flex flex-column align-items-center">

     <% blogs.forEach(blog => { %>

       <div class="card mb-4" style="width: 38rem;">

         <h4 class="p-3"><%= blog.title %></h4>

         <!-- FIXED IMAGE SIZE -->
         <div style="width: 100%; height: 250px; overflow: hidden;">
           <img 
             src="<%= blog.coverImageURL %>" 
             style="width: 100%; height: 100%; object-fit: cover;"
             alt="Blog Image"
           />
         </div>

         <div class="card-body">

           <p class="card-text">
             <%= blog.body.length > 150 
                ? blog.body.substring(0, blog.body.lastIndexOf(" ", 150)) + "..." 
                : blog.body 
             %>
           </p>

           <!-- VIEW BUTTON -->
           <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">View</a>

           

         </div>

       </div>

     <% }) %>

   </div>

   <%- include('./partials/script') %>
</body>
</html>
